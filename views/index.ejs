      <div class="sidebar-button-wrapper">
        <div class="points-button sidebar-button">
          <img class="sidebar-icons icon-darkmode" src="https://cdn-icons-png.flaticon.com/512/7613/7613816.png"
            alt="" />
        </div>
        <div class="stats-button sidebar-button">
          <img class="sidebar-icons icon-darkmode" src="https://cdn-icons-png.flaticon.com/512/711/711976.png" alt="" />
        </div>
        <div class="config-button sidebar-button">
          <img class="sidebar-icons icon-darkmode" src="https://cdn-icons-png.flaticon.com/512/1242/1242392.png"
            alt="" />
        </div>
        <div class="config-button sidebar-button">
          <img class="sidebar-icons darkmode" src="https://cdn-icons-png.flaticon.com/512/42/42146.png" alt="" />
        </div>
