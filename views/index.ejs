    <div class="team1-players-wrapper players-wrapper">
      <h4>
        <%= data1.team1Name %>
      </h4>
      <% data1.team1Players.forEach(player=> { %> <%# Player card %>
          <article id="<%= player.playerId %>" class="player-line">
            <div class="player-info">
              <p class="player-text">
                <span class="jersey-number">
                  <%= player.jerseyNumber %>
                </span>
                <%= player.name %>
              </p>
              <img class="info-icon icon-darkmode" src="https://cdn-icons-png.flaticon.com/512/471/471713.png" alt="" />
              <div class="dots">
                <div class="dot green-dot"></div>
                <div class="dot blue-dot"></div>
                <div class="dot red-dot"></div>
                <div class="dot yellow-dot"></div>
              </div>
            </div>
            <div class="line"></div>
          </article>
          <% }) %>
            <h4>
              <%= data1.team2Name %>
            </h4>
            <% data1.team2Players.forEach(player=> { %> <%# Player card %>
                <article id="<%= player.playerId %>" class="player-line">
                  <div class="player-info">
                    <p class="player-text">
                      <span class="jersey-number">
                        <%= player.jerseyNumber %>
                      </span>
                      <%= player.name %>
                    </p>
                    <img class="info-icon" src="https://cdn-icons-png.flaticon.com/512/471/471713.png" alt="" />
                    <div class="dots">
                      <div class="dot green-dot"></div>
                      <div class="dot blue-dot"></div>
                      <div class="dot red-dot"></div>
                      <div class="dot yellow-dot"></div>
