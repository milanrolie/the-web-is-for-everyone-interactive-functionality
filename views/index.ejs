              <% if (point.team1OorD==="O" ) { %>
                <tr class="score-info">
                  <td>
                    <%= point.team1Passes %>
                  </td>
                  <td>
                    <%= point.team1Turnovers %>
                  </td>
                  <td>
                    <%= point.team1OorD %>
