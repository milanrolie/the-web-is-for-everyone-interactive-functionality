                  <td>
                    <%= point.team2Turnovers %>
                  </td>
                  <td>
                    <%= point.team2Passes %>
                  </td>
                </tr>
                <% } else {%>
                  <tr class="score-info-team-1 green">
                    <td>
                      <%= point.team1Passes %>
                    </td>
                    <td>
                      <%= point.team1Turnovers %>
                    </td>
                    <td>
                      <%= point.team1OorD %>
