    <div class="random-facts-wrapper">
      <!-- <h4>Facts</h4> -->
      <img class="dice icon-darkmode" src="https://cdn-icons-png.flaticon.com/512/246/246569.png" alt="" />
      <p class="random-fact">
        <strong>Beau Kittredge</strong> is a well-known ultimate frisbee player
        who has won multiple championships with various teams. In addition to his
        accomplishments on the field, he is also a trained opera singer and has
        performed in several productions.
      </p>
    </div>

    <div class="score-wrapper">
      <div class="score-line"></div>
      <!-- <h4>Score</h4> -->
      <div class="team1 teams">
        <img class="team-logo" src="https://upload.wikimedia.org/wikipedia/commons/a/ab/Android_O_Preview_Logo.png"
          alt="" />
        <h2>
          <%= data1.team1Name %>
        </h2>
      </div>
      <div class="score">
        <div class="shirt-color-1"></div>
        <span class="score1">
          <%= data2.team1Score %>
        </span><span>
          <%= data2.team2Score %>
        </span>
        <div class="shirt-color-2"></div>
      </div>
      <div class="team2 teams">
        <img class="team-logo"
          src="https://preview.redd.it/x4fvj9wh9dy71.png?width=702&format=png&auto=webp&s=e5040778e3ac0098f6a180475d3a693a40b92d1a"
          alt="" />
        <h2>
          <%= data1.team2Name %>
        </h2>
      </div>
    </div>

