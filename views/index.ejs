          <!-- <p class="game-conditions">Field</p> -->
          <div class="condition-icon-wrapper">
            <img class="condition-icon" src="https://cdn-icons-png.flaticon.com/512/795/795323.png" alt="" />
          </div>
          <h3>
            <%= data1.field %>
          </h3>
        </div>
        <div class="game-condition-line">
          <div class="condition-icon-wrapper">
            <img class="condition-icon" src="https://cdn-icons-png.flaticon.com/512/1204/1204035.png" alt="" />
